<h2 class="page-title"><%= @boxer.first_name %> <%= @boxer.last_name %></h2>

<div class="buttons">
<% if can? :update, @boxer %>
  <%= link_to t('buttons.edit'), edit_boxer_path(@boxer), :class => "btn" %>
<% end %>
<% if can? :destroy, @boxer %>
  <%= link_to t('buttons.destroy'), @boxer, method: :delete, data: { confirm: t('messages.confirm_delete') }, :class => "btn delete" %>
<% end %>
</div>

<div class="row">
  
<div class="infobox span5">
  
<label class="subtitle">Allgemein</label>

<p>
  <strong><%= Boxer.human_attribute_name(:date_of_birth) %>:</strong>
  <%= format_date(@boxer.date_of_birth) %>
</p>

<p>
  <strong><%= Boxer.human_attribute_name(:gender) %>:</strong>
  <% if @boxer.gender %>
  <%= t('misc.female') %>
  <% else %>
  <%= t('misc.male') %>
  <% end %>
</p>

<p>
  <strong><%= t('misc.age_class') %>:</strong>
  <%= @boxer.classify_age %>
</p>

<p>
  <strong><%= Boxer.human_attribute_name(:weight) %>:</strong>
  <%= @boxer.weight.to_i %> kg
</p>

<p>
<strong><%= Club.model_name.human %>:</strong>
  <%= @boxer.club.name %>
</p>

</div>

<% if @boxer.active %>

<div class="infobox span4">
  
<p>
  <label class="subtitle"><%= t('misc.fight', count: 2) %></label>
  <%= Boxer.human_attribute_name(:fights_won) %>:
  <%= @boxer.fights_won %></br>
  <%= Boxer.human_attribute_name(:fights_lost) %>:
  <%= @boxer.fights_lost %></br>
  <%= Boxer.human_attribute_name(:fights_drawn) %>:
  <%= @boxer.fights_drawn %>
</p>

<p>
  <strong><%= PerformanceClass.model_name.human(count: 1) %>:</strong>
  <%= @boxer.classify_performance %>
</p>

</div>
  
<% end %>

</div>

<%= link_to "Alle Boxer", my_boxers_path, :class => "btn" %>
