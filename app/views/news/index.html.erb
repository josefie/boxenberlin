<h2 class="page-title"><%= News.model_name.human(:count => 2) %></h2>

<%= link_to 'New News', new_news_path, :class => "btn" %>

<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= localize news.date %></td>
        <td><%= news.title %></td>
        <td><%= news.text %></td>
        <td><%= link_to "Mehr", news %></td>
      </tr>
    <% end %>
  </tbody>
</table>
