<h2 class="page-title"><%= @club.name %></h2>
  
<div class="buttons">
  <% if can? :update, @club %>
    <%= link_to t('buttons.edit'), edit_profile_path, :class => "btn" %>
  <% end %>
  <% if can? :destroy, @club %>
    <%#= link_to t('buttons.destroy'), @club, method: :delete, data: { confirm: t('messages.confirm_delete_profile') }, :class => "btn delete"  %>
  <% end %>
</div>

<div class="row">
<div class="span5">
  
<legend>Vereinsinfo</legend>
<div class="info-section">
<% unless @club.website.blank? %>
  <div>
    <%= link_to @club.website, @club.website, :class => "link" %>
  </div>
<% end %>

<% unless @club.locations.empty? %>
  <address>
    <ul>
      <% @club.locations.each do |l| %>
        <li>
          <%= l.street %>
          <%= l.number %><br>
          <%= l.zip %>
          <%= l.city %>
        </li>
      <% end %>
    </ul>
  </address>
<% end %>

<div>
  <%#= image_tag "Map" %>
</div>

</div>

<legend>Training</legend>
<div class="info-section">
  <% unless @club.coaches.empty? %>
  <label><%= Coach.model_name.human(:count => 2) %></label>
    <ul>
      <% @club.coaches.each do |c| %>
        <li><%= "#{c.first_name} #{c.last_name}" %></li>
      <% end %>
    </ul>
  <% end %>

  <% unless @club.trainings.empty? %>
  <label><%= Training.model_name.human(:count => 2) %></label>
    <ul>
    <% @club.trainings.each do |t| %>
      <li>
        <%= t.weekday.name %>
        <%= format_time(t.time_start) %> bis 
        <%= format_time(t.time_end) %>
        <% unless t.description.blank? %>
          <%= "(#{t.description})" %>
        <% end%>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>

</div>

<div class="span4">
  
  <legend>Kontaktdaten</legend>
<div class="info-section infobox">
  <% unless @club.contact_name.blank? then %>
    <%= @club.contact_name %></br>
  <% end %>
  <% unless @club.contact_phone.blank? then %>
    <span><%=  Club.human_attribute_name(:contact_phone) %>:</span>
    <%= @club.contact_phone %></br>
  <% end %>
  <% unless @club.contact_mail.blank? then %>
    <span><%=  Club.human_attribute_name(:contact_mail) %>:</span>
    <a class="link" href="mailto:<%= @club.contact_mail %>"><%= @club.contact_mail %></a>
  <% end %>
</div>

<legend>Anstehende <%= Event.model_name.human(:count => 2) %></legend>
<div class="info-section infobox">
  <% if @club.events.empty? then %>
    Keine Veranstaltungen in nÃ¤chster Zeit.
  <% else %>
    <ul>
    <% @club.events.each do |e| %>
      <% if e.approved && e.upcoming? %>
        <li><%= link_to e.title, event_path(e.id), :class => "link" %></li>
      <% else %>
        Keine Veranstaltungen in nÃ¤chster Zeit.
      <% end %>
    <% end %>
    </ul>
  <% end %>
</div>

</div>

</div>
