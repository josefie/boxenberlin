<%= form_for(@club) do |f| %>
  <% if @club.errors.any? %>
    <div id="error_explanation">
      <h2>Verein konnte nicht gespeichert werden:</h2>

      <ul>
      <% @club.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
  <%= t(:name) %><br>
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= t(:address) %><br>
    <%= "#{t(:street)}, #{t(:street_no)}" %>
    <%= f.text_field :street %>
    <%= f.text_field :street_no, size: 5 %><br>
    <%= t(:zip) %>
    <%= f.text_field :zip %>
    <%= t(:city) %>
    <%= f.text_field :city %><br>
  </div>
  
  <div class="field">
    <%= t(:coach) %><br>
    <%= link_to_add_fields("Trainer hinzufÃ¼gen", f, :coaches) %>
    <%= f.fields_for :coaches do |builder| %>
      <%= render "coach_fields", :f => builder %>
    <% end %>
  </div>
  
  <div class="field">
    <%= t(:training) %><br>
    <%= link_to_add_fields("Training hinzufÃ¼gen", f, :trainings) %>
    <%= f.fields_for :trainings do |builder| %>
      <%= render "training_fields", :f => builder %>
    <% end %>
  </div>
  
  <div class="field">
    <%= t(:website) %><br>
    <%= f.url_field :website %>
  </div>
  
  <div class="field">
    <%= t(:contact) %><br>
    <%= t(:name) %>
    <%= f.text_field :contact_name %><br>
    <%= t(:phone) %>
    <%= f.text_field :contact_phone %><br>
    <%= t(:mail) %>
    <%= f.text_field :contact_mail %>
  </div>
  
  <div class="actions form-actions">
    <%= f.submit t(:save), :class => "btn" %>
    <%= link_to t(:cancel), my_profile_path, :class => "btn" %>
  </div>
  
<% end %>