<h2 class="page-title"><%= Club.model_name.human(:count => 2) %></h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%#= Club.human_attribute_name(:name) %></th>
      <th><%#= Location.human_attribute_name(:city) %></th>
      <th><%#= t('activerecord.attributes.club.name') %></th>
      <th><%#= t('activerecord.models.location', count: 1) %></th>
    </tr>
  </thead>

  <tbody>
    <% @clubs.each do |club| %>
      <tr class="club-row" onclick="window.location.href = '<%= club_path(club) %>'">
        <td><%= link_to club.name, club %></td>
        <td>
        <% unless club.locations.empty? %>
          <%= club.locations.first.street %>
          <%= club.locations.first.number %>,
          <%= club.locations.first.zip %>
          <%= club.locations.first.city %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
