<h2>Clubs</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>PLZ</th>
      <th>Ort</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @clubs.each do |club| %>
      <tr>
        <td><%= club.name %></td>
        <td><%= club.zip %></td>
        <td><%= club.city %></td>
        <td><%= link_to 'Show', club %></td>
        <% if can? :update, club %>
          <td><%= link_to 'Edit', edit_club_path(club) %></td>
        <% end %>
        <% if can? :destroy, club %>
          <td><%= link_to 'Destroy', club, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
