<!DOCTYPE html>
<html>
<head>
  <title>Boxenberlin</title>
  <%#= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%#= javascript_include_tag "application", "data-turbolinks-track" => true %>
  
  <%= stylesheet_link_tag "application.css", :cache => true %>
  
  <%= javascript_include_tag "application.js", :cache => true %>
  
  <!-- https://github.com/rjshade/gmaps-autocomplete -->
  <%= javascript_include_tag "gmaps.js", :cache => true %>
  <!-- google maps -->
  <%= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false" %>
  <!-- jquery -->
  <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" %>
  <!-- jquery UI -->
  <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/jquery-ui.min.js" %>
  
  <%= csrf_meta_tags %>
</head>
<body>
  
  <h1>Boxen in Berlin</h1>
  
  <%= debug params %>
  
  <ul id="main-nav" class="nav">
    <li><%= link_to t(:home), root_path %></li>
    <li><%= link_to t(:calendar), calendar_path %></li>
    <li><%= link_to t(:club, count: 2), clubs_path %></li>
  </ul>
  
  <ul id="second-nav" class="nav">
    <% if current_user.nil? %>
    <li><%= link_to t(:sign_up), new_club_path %></li>
    <li><%= link_to t(:login), new_session_path %></li>
    <% else %>
    <li><%= current_user.name %>
    <%= link_to t(:logout), session_path(current_user), method: :delete %></li>
    <% end %>
  </ul>
  
  <% if current_user %>
  <div>
  <strong><%= t(:dashboard) %></strong>
  <ul id="dashboard-nav" class="nav">
    <li><%= link_to t(:profile), my_profile_path %></li>
    <li><%= link_to t(:event, count: 2), my_events_path %></li>
    <li><%= link_to t(:boxer), my_boxers_path %></li>
  </ul>
  <% end %>
  
  <% if current_user && current_user.admin? %>
  <div>
  <strong>Admin</strong>
  <ul id="admin-nav" class="nav">
    <li><%= t(:event, count: 2) %></li>
    <ul>
      <li><%= link_to t(:events_open), manage_path("open") %></li>
      <li><%= link_to t(:events_approved), manage_path("approved") %></li>
      <li><%= link_to t(:events_declined), manage_path("declined") %></li>
    </ul>
  </ul>
  <% end %>
  
  <% if !flash.empty? %>
    <div id="flash">
      <% flash.keys.each do |k| %>
        <div class="<%= k %>">
          <%= flash[k] %>
        </div>
      <% end %>
    </div>
  <% end %>
  
<%= yield %>

</body>
</html>
