<div id="calendar-control">
  <%= link_to image_tag("arrow_sans_left.png", width: "35px"), calendar_path(@current_date-1.month), :id => 'prev' %>
  <span id="calendar-label"><%= localize @current_date, :format => '%B %Y' %></span>
  <%= link_to image_tag("arrow_sans_right.png", width: "35px"), calendar_path(@current_date+1.month), :id => 'next' %>
</div>