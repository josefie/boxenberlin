<div class="fields">
  
  <div class="field">
  <%= f.label t(:label) %>
    <%= f.text_field :label, value: t(:start) %>
  </div>
  <div class="field">
    <%= f.label t(:time) %>
    <%= f.time_select :time %>
  </div>
  <div class="field">
    <%= f.hidden_field :event_id, :value => @event.id %>
  </div>
  
  <%= link_to_remove_fields(t(:remove), f) %>
</div>