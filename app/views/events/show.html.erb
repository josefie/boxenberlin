<% if can? :update, @event %>
<%= link_to 'Edit', edit_event_path(@event) %>
<% end %>

<% if can? :destroy, @event %>
  <%= link_to 'Destroy', @event, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<p>
  <strong><%= @event.title %></strong>
</p>

<p>
  <strong>Club:</strong>
  <%= link_to @event.club.name, club_path(@event.club.id) %>
</p>

<p>
  <strong>Address:</strong>
  <%= @event.address %>
</p>

<%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@event.latitude}%2C#{@event.longitude}" %>

<p>
  <strong>Date:</strong>
  <%= format_date(@event.date) %>
</p>

<p>
  <strong>Schedule:</strong></br>
  <% @event.schedule_items.each do |si| %>
    <%= si.label %>:
    <%= format_time(si.time) %></br>
  <% end %>
</p>

<% if @event.contact_name_public %>
<p>
  <strong>Contact name:</strong>
  <%= @event.contact_name %>
</p>
<% end %>

<% if @event.contact_phone_public %>
<p>
  <strong>Contact phone:</strong>
  <%= @event.contact_phone %>
</p>
<% end %>

<% if @event.contact_mail_public %>
<p>
  <strong>Contact mail:</strong>
  <%= @event.contact_mail %>
</p>
<% end %>

<p>
  <strong>Additional info:</strong>
  <%= @event.additional_info %>
</p>

<p>
  <strong>Gloves available:</strong>
  <%= @event.gloves_available %>
</p>

<p>
  <strong>Catering available:</strong>
  <%= @event.catering_available %>
</p>

<p>
  <strong>Admission:</strong>
  <%= @event.admission %> €
</p>

<p>
  <strong>Admission discounted:</strong>
  <%= @event.admission_discounted %> €
</p>

<p>
  <strong>Performance Classes:</strong></br>
  <% @event.performance_classes.each do |pc| %>
    <%= pc.title %></br>
  <% end %>
</p>
