<h2 class="page-title"><%= Event.model_name.human %> bearbeiten</h2>

<%= form_for @event do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2>Veranstaltung konnte nicht gespeichert werden:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <% unless @event.approved %>
    <%= render 'request_form', :f => f  %>
  <% end %>

  <%= render 'form', :f => f  %>

  <div class="actions form-actions">
    <%= f.submit t('buttons.save'), :class => "btn" %>
    <%= link_to t('buttons.cancel'), my_events_path(:role => "host"), :class => "btn delete" %>
  </div>
  
<% end %>