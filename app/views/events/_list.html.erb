<table class="table table-hover" id="calendar">
  <thead>
    <tr>
      <th></th>
      <th><%= label_tag :title %></th>
      <th><%= label_tag :address %></th>
      <th><%= label_tag :date %></th>
      <th><%= label_tag :host %></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
    <tr class="calendar-row" onclick="window.location.href = '<%= event_path(event) %>'">
      <td class="event-day"><%= event.date.day %></td>
      <td><%= link_to event.title, event, :class => "hide-link" %></td>
      <td><%= event.address %></td>
      <td><%= format_date(event.date) %></td>
      <td><%= unless event.club.nil? then event.club.name end %></td>
    </tr>
    <% end %>
  </tbody>
</table>