<h2>Events</h2>

<%# form_tag events_path, :method => 'get' do %>
  <p>
    <%#= text_field_tag :search %>
    <%#= submit_tag "Search" %>
  </p>
<%# end %>

<%= form_tag calendar_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<div>
  <%= render 'calendar' %>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Location</th>
      <th></th>
      <th>Date</th>
      <th>Host</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.title, event %></td>
        <td><%= event.address %></td>
        <td><%= image_tag "http://maps.google.com/maps/api/staticmap?size=80x80&sensor=false&zoom=11&markers=#{event.latitude}%2C#{event.longitude}" %></td>
        <td><%= event.date %></td>
        <td><%= unless event.club.nil? then event.club.name end %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
