<%= form_tag sessions_path do %>
  
  <div class="field">
  <%= label_tag t(:mail) %><br>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
  <%= label_tag t(:password) %><br>
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag t(:login) %>
  </div>
  
<% end %>