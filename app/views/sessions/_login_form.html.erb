<%= form_tag login_path do %>
  
  <div class="field">
  <%= t(:mail) %><br>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
  <%= t(:password) %><br>
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag t(:login) %>
  </div>
  
<% end %>